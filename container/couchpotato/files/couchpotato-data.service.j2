[Unit]
Description=couchpotato Data Service
After=sabnzbd.service
Requires=docker.service

[Service]
EnvironmentFile=/etc/sysconfig/dnas
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill couchpotato-data
ExecStartPre=/usr/bin/docker pull sebastianhutter/couchpotato
ExecStartPre=-/usr/bin/docker create --name couchpotato-data \
  --volume /home/couchpotato/.couchpotato \
  sebastianhutter/couchpotato \
  /bin/true
ExecStart=/usr/bin/docker start couchpotato-data
ExecStop=/usr/bin/docker stop couchpotato-data
Restart=on-failure

[Install]
WantedBy=multi-user.target


