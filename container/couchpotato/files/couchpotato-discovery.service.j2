[Unit]
Description=Couchpotao Discovery Service
BindsTo=couchpotato.service
Before=couchpotato.service

[Service]
EnvironmentFile=/etc/sysconfig/dnas
ExecStart=/bin/sh -c "while true; do $dnas_scripts/couchpotato-discovery.sh start; sleep 45; done"
ExecStop=/bin/sh -c "$dnas_scripts/couchpotato-discovery.sh stop"
